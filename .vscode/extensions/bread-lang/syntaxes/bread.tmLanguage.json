{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Bread",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#builtins"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bread",
          "begin": "//",
          "end": "$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bread",
          "match": "\\b(if|else|while|for|in|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.bread",
          "match": "\\b(let|const|func|fn)\\b"
        },
        {
          "name": "constant.language.bread",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bread",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bread",
              "match": "\\\\(n|t|r|\\\\|\"|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.bread",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.bread",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.bread",
          "match": "\\b(Int|Bool|Float|Double|String)\\b"
        },
        {
          "name": "storage.type.collection.bread",
          "match": "\\[([A-Za-z_][A-Za-z0-9_]*)(\\s*:\\s*[A-Za-z_][A-Za-z0-9_]*)?\\]"
        },
        {
          "name": "storage.type.optional.bread",
          "match": "([A-Za-z_][A-Za-z0-9_]*|\\[[^\\]]+\\])\\?"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.bread",
          "match": "\\b(func|fn)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.bread"
            },
            "2": {
              "name": "entity.name.function.bread"
            }
          }
        },
        {
          "name": "support.function.call.bread",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.call.bread"
            }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.declaration.bread",
          "match": "\\b(let|const)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.bread"
            },
            "2": {
              "name": "variable.name.bread"
            }
          }
        },
        {
          "name": "variable.other.bread",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.bread",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.bread",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.bread",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.bread",
          "match": "="
        },
        {
          "name": "keyword.operator.optional.bread",
          "match": "\\?\\."
        },
        {
          "name": "punctuation.separator.bread",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.bracket.bread",
          "match": "[\\[\\]{}()]"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.bread",
          "match": "\\b(print|len|type|str|int|float|range|append|toString)\\b"
        },
        {
          "name": "support.property.builtin.bread",
          "match": "\\.length\\b"
        }
      ]
    }
  },
  "scopeName": "source.bread"
}